@import "./registration_styles/form.pcss";
@import "./registration_styles/fieldset.pcss";
@import "./registration_styles/button.pcss";
@import "./registration_styles/link.pcss";

body {
    display: flex; 
    justify-content: center;
}

.main {
    border: 1px solid #b1b6bd;
    width: 400px;
    margin-top: 15%;
    border-radius: 4px;
    background-color: #f2f2f2;
}

.title {
    display: flex;
    justify-content: center;
    color: #303030;
}

.wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}